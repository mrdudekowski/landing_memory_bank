{
  "project": {
    "name": "My Landing Page Project",
    "type": "landing-page",
    "complexity": "medium",
    "description": "Landing page for product/service",
    "version": "1.0.0"
  },
  "system": {
    "autoMode": true,
    "memoryBankSize": "1GB",
    "backupEnabled": true,
    "logLevel": "INFO",
    "performance": {
      "cacheEnabled": true,
      "cacheSize": "100MB",
      "compressionEnabled": true,
      "backgroundSync": true
    }
  },
  "modes": {
    "default": "VAN_MODE",
    "transitions": "automatic",
    "autoSwitch": true,
    "fallback": "VAN_MODE"
  },
  "webDevelopment": {
    "frameworks": ["react", "vue", "vanilla"],
    "cssMethodology": "BEM",
    "responsiveDesign": true,
    "accessibility": "WCAG 2.1 AA",
    "performance": {
      "targetLCP": 2500,
      "targetFID": 100,
      "targetCLS": 0.1,
      "targetFCP": 1000
    }
  },
  "landingPages": {
    "templates": ["business", "product", "event", "lead-generation"],
    "conversionElements": true,
    "seoOptimization": true,
    "analytics": {
      "googleAnalytics": true,
      "hotjar": false,
      "facebookPixel": false
    }
  },
  "database": {
    "type": "sqlite",
    "path": "./data/memory-bank.db",
    "backupPath": "./backups/",
    "maxSize": "1GB",
    "autoBackup": true,
    "backupInterval": "24h"
  },
  "api": {
    "enabled": true,
    "port": 3000,
    "host": "localhost",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000", "https://yourdomain.com"]
    },
    "rateLimit": {
      "enabled": true,
      "maxRequests": 100,
      "windowMs": 900000
    }
  },
  "webhooks": {
    "enabled": false,
    "endpoints": [],
    "secret": "your-webhook-secret-key"
  },
  "logging": {
    "level": "INFO",
    "file": "./logs/app.log",
    "maxSize": "10MB",
    "maxFiles": 5,
    "console": true
  },
  "security": {
    "helmet": true,
    "cors": true,
    "rateLimit": true,
    "contentSecurityPolicy": true,
    "xssProtection": true
  },
  "development": {
    "watchMode": true,
    "hotReload": true,
    "debugMode": false,
    "sourceMaps": true
  },
  "testing": {
    "framework": "jest",
    "coverage": 80,
    "watch": false,
    "verbose": true
  },
  "deployment": {
    "environment": "development",
    "buildCommand": "npm run build",
    "startCommand": "npm start",
    "healthCheck": "/health"
  }
}
